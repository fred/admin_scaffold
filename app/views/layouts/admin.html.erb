<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= (@title || "Admin") %></title>
    <%= stylesheet_link_tag 'admin/base' %>
    <%= stylesheet_link_tag 'admin/admin' %>
    <%= stylesheet_link_tag 'admin/menu' %>
    <%= stylesheet_link_tag 'admin/scaffold' %>
    <%= stylesheet_link_tag 'admin/side_menu' %>
    <%= stylesheet_link_tag 'admin/forms' %>
    <%= stylesheet_link_tag 'admin/typography' %>
    <%= stylesheet_link_tag 'admin/table' %>
    <%= stylesheet_link_tag 'admin/pagination' %>
    <%= yield(:head) %>
  </head>
  <body>
    
    <div id="top-menu">
      <div class="top-menu-left">
        <%= link_to "Home", admin_path %>
        &nbsp; <%= link_to "Website", root_path %>
      </div>
      <div class="top-menu-right">
        <span class="loggedas"><%= "#{t("logged_in_as")}: #{current_user.name}" %> </span>        
        <% if !current_user %>
          &nbsp; <%= link_to t("login"), new_user_session_path %> |
        <% else %>
          &nbsp; <%= link_to t("my_account"), edit_admin_user_path(current_user) %> |
          &nbsp; <%= link_to "LOGOUT", user_session_path, :method => :delete, :confirm => t("are_you_sure") %>
        <% end %>
      </div>
    </div>
    
    <div id="site">
    
      <h2 class="header_title">
        Administration Interface <span class="version"> version 0.1 </span>
      </h2>
      
      <div  id="header"> 
        
        <div  id="dolphincontainer">
          
          <div  id="dolphinnav">
            <ul>
              <%= link_to(image_tag("admin/home_icon.png", :class => "home_icon"), admin_path ) %>
              <li>
                <%= link_to "Home", admin_path, :class => is_current_menu("dashboard") %>
              </li>
              <li>
                <%= link_to "Users", admin_users_path, :class => is_current_menu("users") %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <!-- Header Ends here -->
        
      <br class="clear"/>
      
      <!-- Main Content Starts Here -->
      
      <div id="main">
        
        <div class="content">
          
          <%= content_for_admin_menu %>
          
          <div class="<%=show_settings_menu?%>">
            
            <% if flash[:error] %>
              <div class="error">
                <%= flash[:error] %>
              </div>
            <% end %>
          
            <% if flash[:notice] %>
              <div class="notice">
                <%= flash[:notice] %>
              </div>
            <% end %>
          
            <% if flash[:success] %>
              <div class="success">
                <%= flash[:success] %>
              </div>
            <% end %>
            
            <%= yield %>
            
          </div>
          
        </div>
        
      </div>
      
      <%= render :partial => "/shared/admin/footer" %>
    </div>
  
    <%= (render :partial => "/shared/statcounter") if RAILS_ENV == "production" %>
    <%= (render :partial => "/shared/google_analytics") if RAILS_ENV == "production" %>
  </body>
</html>
